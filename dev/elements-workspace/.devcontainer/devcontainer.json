// For format details, see https://aka.ms/devcontainer.json
{
	"name": "DataJoint Elements (dev-container)",
	"dockerComposeFile": "../docker-compose.yml",
	"service": "conda",
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"python.condaPath": "${env:CONDA_DIR}/bin/conda",
		"python.defaultInterpreterPath": "/home/dj/.conda/envs/elements/bin/python",
		"python.linting.enabled": true,
		"python.linting.pylintEnabled": true,
		"python.formatting.provider": "black",
		"python.terminal.activateEnvInCurrentTerminal": true,
		"python.terminal.activateEnvironment": true
	},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ms-toolsai.jupyter",
		"visualstudioexptteam.vscodeintellicode",
		"eamodio.gitlens",
		"njpwerner.autodocstring",
		"cweijan.vscode-mysql-client2"
	],
	"workspaceFolder": "/home/dj/datajoint-elements",
	// If specifying user, you must make sure forks of the repos exist or use --mix-origin:
	// ["git-elements", "--user=iamamutt", "--mix-origin"]
	"postCreateCommand": [
		"git-elements"
	]
}
