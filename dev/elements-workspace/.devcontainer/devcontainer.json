// For format details, see https://aka.ms/devcontainer.json
{
	"name": "DataJoint Elements (dev-container)",
	"dockerComposeFile": "../docker-compose.yml",
	"service": "conda",
	"workspaceFolder": "/home/dj/datajoint-elements",
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"autoDocstring.docstringFormat": "google",
		"autoDocstring.generateDocstringOnEnter": true,
		"autoDocstring.guessTypes": true,
		"autoDocstring.startOnNewLine": true,
		"python.condaPath": "/opt/local/conda/bin/conda",
		"python.defaultInterpreterPath": "/home/dj/.conda/envs/elements/bin/python",
		"python.formatting.provider": "black",
		"python.formatting.blackArgs": [
			"--line-length=88"
		],
		"python.linting.flake8Enabled": true,
		"python.linting.flake8Args": [
			"--max-line-length=88",
			"--extend-ignore=E203,W503,E501,F401,E402",
			"--select=C,E,F,W,B,B950"
		],
		"python.sortImports.args": [
			"--profile", "black"
		],
		"python.linting.enabled": true,
		"python.linting.pylintEnabled": false,
		"python.terminal.activateEnvInCurrentTerminal": true,
		"python.terminal.activateEnvironment": true
	},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ms-toolsai.jupyter",
		"ms-toolsai.jupyter-renderers",
		"github.vscode-pull-request-github",
		"visualstudioexptteam.vscodeintellicode",
		"eamodio.gitlens",
		"mhutchie.git-graph",
		"bierner.github-markdown-preview",
		"njpwerner.autodocstring",
		"tamasfe.even-better-toml",
		"cweijan.vscode-mysql-client2"
	],
	// If specifying user, you must make sure forks of the repos exist or use --mix-origin, e.g.
	//   ["git-elements", "--user=myGitHubUsername", "--mix-origin"]
	"postCreateCommand": [
		// "git-elements"
		"git-elements",
		"--user=iamamutt"
	],
	"shutdownAction": "stopCompose",
	"userEnvProbe": "loginInteractiveShell",
	"features": {
		"github": "latest"
	}
}
